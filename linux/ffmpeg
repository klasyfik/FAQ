// copy audio to video
ffmpeg -i video.mp4 -i audio.m4a -c copy output.mp4

// transcode to H264
sudo ffmpeg -i video.avi -c:v libx264 -preset slow -crf 17 output.mp4

// concat two video files
$ cat mylist.txt
file '/path/to/file1'
file '/path/to/file2'
file '/path/to/file3'

$ ffmpeg -safe 0 -f concat -i mylist.txt -c copy output
